  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@cucumber/pretty-formatter": "^1.0.1",
    "babel-jest": "^29.7.0",
    "chai": "^4.3.7",
    "cucumber": "^6.0.7",
    "cucumber-pretty": "^6.0.1",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.31.0",
